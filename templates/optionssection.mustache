                <option value="3" title="{{# str }} filterstudcreated, mod_flashcards {{/ str }}" {{#selected23}}selected{{/selected23}}>{{# str }} filterstudcreated, mod_flashcards {{/ str }}</option>
                <option value="6" title="{{# str }} filterstudadded, mod_flashcards {{/ str }}" {{#selected26}}selected{{/selected26}}>{{# str }} filterstudadded, mod_flashcards {{/ str }}</option>
                <option value="4" title="{{# str }} filternew, mod_flashcards {{/ str }}" {{#selected24}}selected{{/selected24}}>{{# str }} filternew, mod_flashcards {{/ str }}</option>
            </select>
        {{/filter}}
	    {{^filter}}
	      <label for="filter">{{# str }} filter, mod_flashcards {{/ str }}</label>
	       <select id="filter" name="filter" onchange="this.form.submit()">
	           <option value="1" title="{{# str }} filterall, mod_flashcards {{/ str }}" {{#selected21}}selected{{/selected21}}>{{# str }} filterall, mod_flashcards {{/ str }}</option>
