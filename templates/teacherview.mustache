{{!
    @template mod_flashcards/teacherview

    Example context (json):
    {
        "createbtnlink": "https://addflashcardlink",
        "displayauthorcolumn": true,
        "qlabel": "Question",
        "questions": [
            {
                "name": "testquestionnew1",
                "author": "Jack Nicholson",
                "qurl": "https://previewurl",
                "deleteurl": "https://deleturl",
                "editurl": "https://editurl"
            }
        ]
    }
}}

<table class="generaltable fullwidth">
    <thead>
    <tr>
        <th class="header name">{{qlabel}}</th>
        {{#displayauthorcolumn}}
            <th class="flashcards_teacherview_author header">{{# str }} author, flashcards {{/ str }}</th>
        {{/displayauthorcolumn}}
        <th class="flashcards_teacherview_ec header iconcol editaction" scope="col">&#160;</th>
        <th class="flashcards_teacherview_ec header iconcol previewaction" scope="col">&#160;</th>
        <th class="flashcards_teacherview_ec header iconcol deleteaction" scope="col">&#160;</th>
    </tr>
    </thead>
    <tbody class="table">
    {{#questions}}
        <tr class="table-row">
            <td class="table-cell">
                {{name}}
            </td>
            {{#displayauthorcolumn}}
	            <td class="table-row">
	                {{author}}
	            </td>
            {{/displayauthorcolumn}}
            <td class="iconcol editaction">
                <a title="Edit" href="{{editurl}}">
                    <i class="icon fa fa-cog fa-fw " title="{{# str }} edit, moodle {{/ str }}" aria-label="{{# str }} edit, moodle {{/ str }}"></i>
                </a>
            </td>
            <td class="iconcol previewaction">
                <a class="mod_flashcards_questionpreviewlink" href="{{qurl}}" target="questionpreview" title="Preview">
                    <i class="icon fa fa-search-plus fa-fw iconsmall" title="{{# str }} preview, moodle {{/ str }}" aria-label="{{# str }} preview, moodle {{/ str }}"></i>
                </a>
            </td>
            <td class="iconcol deleteaction">
                <a title="Delete" href="{{deleteurl}}">
                    <i class="icon fa fa-trash fa-fw " title="{{# str }} delete, moodle {{/ str }}" aria-label="{{# str }} delete, moodle {{/ str }}"></i>
                </a>
            </td>
        </tr>
    {{/questions}}

    </tbody>
</table>

<div>
    <button class="btn btn-secondary" onclick="window.location.href = '{{createbtnlink}}';"> {{# str }} createflashcardbutton, mod_flashcards {{/ str }} </button>
</div>
