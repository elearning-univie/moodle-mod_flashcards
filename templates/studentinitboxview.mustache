<section>
    <table class="generaltable fullwidth">
        <thead>
        <tr>
            <th class="header" scope="col"><input type="checkbox" onClick="$.mod_flashcards_select_all(this)" />{{# str }} selectall, mod_flashcards {{/ str }}</th>
            <th class="header name">{{# str }} question, mod_flashcards {{/ str }}</th>
            <th class="header iconcol previewaction" scope="col">{{# str }} preview, moodle {{/ str }}</th>
        </tr>
        </thead>
        <tbody class="table">
        {{#questions}}
            <tr class="table-row">
                <td class="iconcol previewaction">
                    <input class="mod-flashcards-checkbox" type="checkbox">
                </td>
                <td class="table-cell">
                    {{name}}
                </td>
                <td class="iconcol previewaction">
                    <a href="{{qurl}}" class="" title="Preview">
                        <i class="icon fa fa-search-plus fa-fw iconsmall" title="{{# str }} preview, moodle {{/ str }}" aria-label="{{# str }} preview, moodle {{/ str }}"></i>
                    </a>
                </td>
            </tr>
        {{/questions}}
        </tbody>
    </table>
</section>

<section>
    <div>
        <button onclick="$.mod_flashcards_load_questions()"> {{# str }} addflashcardbutton, mod_flashcards {{/ str }} </button>
    </div>
</section>